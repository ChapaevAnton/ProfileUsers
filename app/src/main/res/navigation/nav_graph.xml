<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/userProfileFragment">

    <fragment
        android:id="@+id/userProfileFragment"
        android:name="com.example.profileusers.profile.UserProfileFragment"
        android:label="UserProfileFragment"
        tools:layout="@layout/user_profile_fragment">


        <action
            android:id="@+id/action_userProfileFragment_to_photoGalleryFragment"
            app:destination="@id/photoGalleryFragment" />
    </fragment>

    <fragment
        android:id="@+id/photoGalleryFragment"
        android:name="com.example.profileusers.profile.photogallery.PhotoGalleryFragment"
        android:label="PhotoGalleryFragment"
        tools:layout="@layout/photo_gallery_fragment" >
        <action
            android:id="@+id/action_photoGalleryFragment_to_CropImageFragment"
            app:destination="@id/CropImageFragment" />
    </fragment>

    <fragment
        android:id="@+id/CropImageFragment"
        android:name="com.example.profileusers.profile.croupimage.CroupImageFragment"
        android:label="CropImageFragment"
        tools:layout="@layout/croup_image_fragment">

        <action
            android:id="@+id/action_CropImageFragment_to_userProfileFragment"
            app:destination="@id/userProfileFragment"
            app:popUpTo="@id/userProfileFragment"
            app:popUpToInclusive="true" />

        <argument
            android:name="photoPath"
            app:argType="string" />

    </fragment>

</navigation>